<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <TextView
            android:id="@+id/productInRecepyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Text here"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/productsInRecepyEditItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            app:srcCompat="@drawable/ic_edit_gray_24dp"
            android:layout_toStartOf="@+id/productsInRecepyRemoveItem"/>

        <ImageButton
            android:id="@+id/productsInRecepyRemoveItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_remove_circle_red_24dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>




</android.support.v7.widget.CardView>